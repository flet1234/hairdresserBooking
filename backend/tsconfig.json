{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}